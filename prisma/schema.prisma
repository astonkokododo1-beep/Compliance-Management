generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(EMPLOYEE)
  accounts      Account[]
  sessions      Session[]
  policies      Policy[]
  declarations  Declaration[]
  investigations Investigation[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

enum Role {
  ADMIN
  COMPLIANCE_OFFICER
  MANAGER
  EMPLOYEE
  AUDITOR
  INVESTIGATOR
}

model Policy {
  id          String   @id @default(cuid())
  title       String
  category    String
  content     String
  version     String
  status      String   @default("draft")
  aiGenerated Boolean  @default(false)
  createdBy   String
  author      User     @relation(fields: [createdBy], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([category])
}

enum DeclarationType {
  GHE
  COI
  WHISTLEBLOWING
}

model Declaration {
  id          String   @id @default(cuid())
  type        DeclarationType
  data        Json
  riskScore   Int?     @default(0)
  status      String   @default("pending")
  attachments String[]
  createdBy   String
  author      User     @relation(fields: [createdBy], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([type, status])
}

model Investigation {
  id          String   @id @default(cuid())
  caseId      String   @unique
  title       String
  description String
  category    String
  severity    String
  status      String   @default("open")
  evidence    Json[]
  messages    Json[]
  assignedTo  String?
  investigator User?   @relation(fields: [assignedTo], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([status, severity])
}

model Alert {
  id          String   @id @default(cuid())
  title       String
  description String
  riskScore   Int
  module      String
  entityId    String
  status      String   @default("active")
  createdAt   DateTime @default(now())
  @@index([module, status])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  resource  String
  details   Json?
  createdAt DateTime @default(now())
  @@index([userId, action])
}
